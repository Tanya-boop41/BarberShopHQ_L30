<h2>Информация для администратора</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Имя клиента</th>
      <th scope="col">Номер телефона</th>
      <th scope="col">Дата и время записи</th>
      <th scope="col">Парикмахер</th>
      <th scope="col">Цвет окрашивания</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |row| %>
     <tr>
     		<td><%= row['id'] %></td>
     		<td><%= row['username'] %></td>
     		<td><%= row['phone'] %></td>
     		<td><%= row['datestamp'] %></td>
     		<td><%= row['barber'] %></td>
     		<td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
     </tr>
    <% end %>
  </tbody>
</table>
